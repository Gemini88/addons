<?xml version="1.0" encoding="UTF-8"?>
<addon id="plugin.video.veetle" version="0.1.8" name="Veetle" provider-name="xbmchub.com">
    <requires>
        <import addon="xbmc.python" version="1.0"/>
        <import addon="script.module.simplejson" version="2.0.10"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>
    <extension point= "xbmc.addon.metadata">
        <summary>Browse and stream from veetle.com</summary>
        <description>Enables watching streams on veetle.com that are flash enabled.</description>
        <disclaimer>Does not work for 'HD' streams which require a software download.</disclaimer>
        <platform>all</platform>
        <forum>http://www.xbmchub.com/forums/official-xbmc-hub-repo/</forum>
        <website>http://www.xbmchub.com/</website>
    </extension>
</addon>

